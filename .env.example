# Production Environment Configuration Template
# Copy this to .env and fill in your production values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_PATH=./data/production.db

# ============================================
# SESSION SECURITY
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_HEX_STRING

# ============================================
# EMAIL SERVICE (Gmail SMTP)
# ============================================
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password
GMAIL_FROM_NAME=EPQ Assessment Platform

# ============================================
# APPLICATION SETTINGS
# ============================================
# Set to 'production' for production environment
ENVIRONMENT=production

# Public base URL for email links
PUBLIC_BASE_URL=https://yourdomain.com

# Enable HTTPS-only cookies in production
HTTPS_ONLY_COOKIES=true

# ============================================
# OPTIONAL: Alternative Email Providers
# ============================================
# For SendGrid:
# SENDGRID_API_KEY=your-sendgrid-api-key

# For AWS SES:
# AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# For Mailgun:
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.yourdomain.com
